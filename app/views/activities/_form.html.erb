    <%= form.label :name %>
    <%= form.text_field :name, id: :activity_name %>
  </div>

  <div class="field">
    <%= form.label :descrption %>
    <%= form.text_field :descrption, id: :activity_descrption %>
  </div>

  <div class="field">
    <%= form.label :place %>
    <%= form.text_field :place, id: :activity_place %>
  </div>

  <div class="field">
    <%= form.label :type_population %>
    <%= form.text_field :type_population, id: :activity_type_population %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
